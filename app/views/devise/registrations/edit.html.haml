- content_for :header do
  .skinny-header
    %div{:style => "padding-top: 1px; width: 820px; margin: auto;"}
    Tu Cuenta


= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f|
  = devise_error_messages!

  %p
    = f.label :email
    %br/
    = f.text_field :email

  %p
    = f.label :password, "Password (dejalo blanco si no lo quieres cambiar)"
    %br/
    = f.password_field :password

  %p
    = f.label :password_confirmation, "Confirmacion de password"
    %br/
    = f.password_field :password_confirmation

  %p
    = f.label :current_password, "Password Actual (necesitamos tu password para comitir cambios)"
    %br/
    = f.password_field :current_password

  %p
    = f.submit "Update"

%p
  Quieres cancelar tu cuenta?
  = link_to "Cancelar cuenta", registration_path(resource_name), :confirm => "Estas seguro?", :method => :delete
  
%br/
= link_to "Back", :back
